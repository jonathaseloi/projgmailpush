<p id="notice"><%= notice %></p>

<h1 style="margin: 20px;">Templates</h1>

<div class="row">
  <div class="col-6" style="text-align: left;margin-left: 20px;">
    <%= link_to 'New Email Template', new_email_template_path, class:"btn btn-outline-secondary" %>
  </div>
</div>

<div class="row justify-content-md-center" style="margin: 15px;box-shadow: 0px 0px 4px 0px #b7b7b7; border-radius: 5px;padding:20px">
  <div class="col-10" style="min-width: 45px;"><p>Nome</p></div>
  <div class="col-2"></div>
  <hr style="margin-top: 17px;width:99%">
  <% if @email_templates.blank? %>
    <div class="alert alert-warning" role="alert" style="width: fit-content;">
      Nenhum resultado encontrado!
    </div>
  <% else %>
    <% @email_templates.each_with_index do |email_template, i| %>
      <% if i > 0 %>
        <hr style="margin-top: 17px;width:99%">
      <% end %>
      <div class="col-12" style="color: #212529;">
        <div style="float:right;">
          <%= link_to open_template_modal_email_template_path(email_template.id), class:"btn btn-outline-primary", remote: true do %>
            <i class="fa fa-eye" style="color: #0044aa;" aria-hidden="true"></i>
          <% end %>
          <%= link_to 'Editar', open_template_modal_email_template_path(email_template.id, edit: true), class:"btn btn-outline-secondary", remote: true %>
          <%= link_to email_template, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" do %>
            <i class="fa fa-trash" style="color: #910000;" aria-hidden="true"></i>
          <% end %>
        </div>
        <div style="align-self: flex-start;">
          <p><%= email_template.name %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div id="modal"></div>
